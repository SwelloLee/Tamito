@page
@model LoginModel
@{
 Layout = "/Pages/Shared/_LoginLayout.cshtml";
}

@{
    ViewData["Title"] = "Log in";
}

<div class="contain">
    <div class="auth">
        <section class="inner">
            <form id="account" method="post">
                <h4>Welcome back</h4>
                <hr />
                <div class="auth-validation" asp-validation-summary="All" class="text-danger"></div>
                <div class="elem">
                    <!--<label asp-for="Input.Email"></label>-->
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                    <!--<span asp-validation-for="Input.Email" class="text-danger"></span>-->
                </div>
                <div class="elem">
                    <!--<label asp-for="Input.Password"></label>-->
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                    <!--<span asp-validation-for="Input.Password" class="text-danger"></span>-->
                </div>
                <div class="elem">
                    <button type="submit" class="btn auth-button">Log in</button>
                </div>
                <div class="elem">
                    <!--<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>-->
                    <p class="lower-auth">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Dont have an account? Register</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
