@page
@model RegisterModel
@{
 Layout = "/Pages/Shared/_LoginLayout.cshtml";
}

@{
    ViewData["Title"] = "Register";
}

<div class="contain">
    <div class="auth">
        <section class="inner">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create an Account</h4>
                <hr />
                <div class="auth-validation" asp-validation-summary="All" class="text-danger"></div>
                <div class="elem">
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                    <!--<span asp-validation-for="Input.Email" class="text-danger"></span>-->
                </div>
                <div class="elem">
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                    <!--<span asp-validation-for="Input.Password" class="text-danger"></span>-->
                </div>
                <div class="elem">
                    <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" />
                    <!--<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>-->
                </div>
                <div class="elem">
                    <button type="submit" class="btn auth-button">Register</button>
                </div>
                <div class="elem">
                    <!--<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>-->
                    <p class="lower-auth">
                        <a asp-page="./Login">Already have an account? Log in</a>
                    </p>
                </div>
            </form>
        </section>
        
